 static void
+mt7915_mcu_rx_all_sta_info_event(struct mt7915_dev *dev, struct sk_buff *skb)
+{
+	u8 ac;
+	u16 i, wlan_idx;
+	struct mt76_wcid *wcid;
+	struct ieee80211_sta *sta;
+	struct mt76_sta_stats *stats;
+	struct mt7915_mcu_all_sta_info_event *res;
+	u32 prev_tx_airtime, prev_rx_airtime;
+
+	res = (struct mt7915_mcu_all_sta_info_event *)skb->data;
+
+	for (i = 0; i < le16_to_cpu(res->sta_num); i++) {
+		switch (res->tag) {
+		case MCU_PHY_PER_STA_TXRX_AIR_TIME:
+			wlan_idx = le16_to_cpu(res->airtime[i].wlan_idx);
+			wcid = rcu_dereference(dev->mt76.wcid[wlan_idx]);
+			stats = &wcid->stats; 
+
+			sta = wcid_to_sta(wcid);
+			if (!sta)
+				continue;
+
+			for (ac = IEEE80211_AC_VO; ac < IEEE80211_NUM_ACS; ++ac) {
+				u8 lmac_ac = mt76_connac_lmac_mapping(ac);
+
+				prev_tx_airtime = stats->tx_airtime[ac];
+				prev_rx_airtime = stats->rx_airtime[ac];
+
+				if (stats->tx_airtime[ac] - stats->buf_tx_airtime[ac] > le32_to_cpu(res->airtime[i].tx[lmac_ac])) {
+					stats->buf_tx_airtime[ac] = stats->tx_airtime[ac];
+					stats->tx_airtime[ac] += le32_to_cpu(res->airtime[i].tx[lmac_ac]);
+				} else {
+					stats->tx_airtime[ac] = stats->buf_tx_airtime[ac] + le32_to_cpu(res->airtime[i].tx[lmac_ac]);
+				}
+
+				if (stats->rx_airtime[ac] - stats->buf_rx_airtime[ac] > le32_to_cpu(res->airtime[i].rx[lmac_ac])) {
+					stats->buf_rx_airtime[ac] = stats->rx_airtime[ac];
+					stats->rx_airtime[ac] += le32_to_cpu(res->airtime[i].rx[lmac_ac]);
+				} else {
+					stats->rx_airtime[ac] = stats->buf_rx_airtime[ac] + le32_to_cpu(res->airtime[i].rx[lmac_ac]);
+				}
+
+				if (stats->tx_airtime[ac] < stats->buf_tx_airtime[ac]) {
+					stats->buf_tx_airtime[ac] = 0;
+				}
+
+				ieee80211_sta_register_airtime(sta, mt76_ac_to_tid(ac),
+						stats->tx_airtime[ac] - prev_tx_airtime, stats->rx_airtime[ac] - prev_rx_airtime);
+			}
+			break;
+		default:
+			break;
+		}
+	}
+}
