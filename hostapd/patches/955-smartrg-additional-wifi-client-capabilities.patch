+static uint16_t get_value_from_bitfield(uint8_t *databuf, uint8_t bitstart, uint8_t bitcount)
+{
+	uint16_t value=0;
+	uint8_t bitend = bitstart + bitcount - 1;
+	uint8_t byte = bitend / 8;
+	uint8_t bit  = 1 << (bitend % 8);
+	while (bitcount > 0)
+	{
+		value = value << 1;
+		value += (databuf[byte] & bit) ? 1 : 0;
+		bitcount--;
+		bit = (bit >> 1) & 0x7f;
+		if (bit == 0)
+		{
+			bit = 0x80;
+			byte--;
+		}
+	}
+	return value;
+}
