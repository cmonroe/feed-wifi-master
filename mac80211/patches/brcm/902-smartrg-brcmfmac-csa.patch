+++ b/drivers/net/wireless/broadcom/brcm80211/brcmfmac/cfg80211.c
@@ -5713,6 +5713,8 @@ static int brcmf_cfg80211_get_channel(st
 	u32 chanspec;
 	int freq, err;
 
+	memset(chandef, 0, sizeof(*chandef));
